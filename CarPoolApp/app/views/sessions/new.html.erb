<% provide(:title, "Log in") %>
<div id="content">
  <div id="input_form">
    <div class="form">
    </br>
    <h2>Login to Your Account</h2>
  </br>
  <div class="input">
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :email , placeholder:"Enter your e-mail"%>
    <%= f.password_field :password , placeholder:"Enter your password"%>
    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span class="rem">Remember me on this computer</span>
    <%end %>
    <%= f.submit "Log in", class: "button button-glow button-rounded button-raised button-primary" %>
    <% end %>
  </br>
  <%= link_to "Forgot your password?", new_password_reset_path  %>
</div>
</div>
</div>
</div>
