<% provide(:title, "Edit user") %>

<div id="content">
  <div id="input_form">
    <div class="form">
    </br>
    <h2>Update Your Account</h2>
    <div class="input">
      <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_field :firstname ,placeholder: :firstname%>
      <%= f.text_field :lastname ,placeholder: :lastname%>
      <%= f.text_field :email , placeholder: :email%>
      <%= f.password_field :password , placeholder: "Password"%>
      <%= f.password_field :password_confirmation , placeholder:"Confirm Password" %>
      <input class="button button-glow button-rounded button-raised button-primary" name="commit" type="submit" value="Commit your change" />
      <% end %>
    </div>

</div>
</div>
</div>
